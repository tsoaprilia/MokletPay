<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="331dp"
        android:layout_height="313dp"
        android:id="@+id/card_view_history"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardCornerRadius="15dp"
        >

        <TextView
            android:id="@+id/tv_kurangbayar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="24dp"
            android:text="Kurang Pembayaran"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/ic_close_black" />

     <EditText
         android:layout_marginTop="74dp"
         android:id="@+id/edt_nominal"
         android:layout_width="match_parent"
         android:layout_height="56dp"
         style="@style/editTextCustom"
         android:hint="Nominal ..."
         android:inputType="number"
         app:layout_constraintTop_toBottomOf="@+id/tv_kurangbayar"
         />

        <Button
            android:id="@+id/btn_simpan_data_spp"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_marginTop="72dp"
            android:text="Simpan Data"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_button_simpan"
            android:layout_gravity="center"
         />




    </androidx.cardview.widget.CardView>





</androidx.constraintlayout.widget.ConstraintLayout>